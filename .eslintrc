{
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": [2, "always"],
      "indent": [2, 2, { "VariableDeclarator": 2, "SwitchCase": 1 }],
      "curly": 2,
      "no-undef": 0,
      "no-console": 0,
      "no-unused-vars": [2, {
        "args": "none"
      }],
      "react/prop-types": "off",
      "no-throw-literal": "error",
      "camelcase": "error"
    },
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "version": "16.6"
      }
    }
  }